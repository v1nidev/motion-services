{
  "name": "monorepo",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@10.8.0",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "node .husky/install.mjs",
    "ladle": "pnpm --filter @monorepo/ui ladle:dev",
    "ladle:build": "pnpm --filter @monorepo/ui ladle:build",
    "ladle:preview": "pnpm --filter @monorepo/ui ladle:preview"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.7.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "pnpm exec prettier --write"
    ]
  },
  "dependencies": {
    "@ladle/react": "^5.1.1"
  }
}
